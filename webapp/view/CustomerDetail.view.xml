<mvc:View
  controllerName="in.asint.task.taskm.controller.CustomerDetail"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">

  <Page title="{i18n>customerDetail.title}" showNavButton="true" navButtonPress=".onNavBack">
    <content>
      <ObjectHeader
        title="{CompanyName}"
        number="{CustomerID}" />
      <ObjectAttribute title="{i18n>contactName}" text="{ContactName}" />
      <ObjectAttribute title="{i18n>city}" text="{City}" />
      <ObjectAttribute title="{i18n>region}" text="{Region}" />
      <ObjectAttribute title="{i18n>country}" text="{Country}" />
      <ObjectAttribute title="{i18n>phone}" text="{Phone}" />
    </content>
  </Page>
</mvc:View>
